package lab03;
import java.util.*;

public class student {
 string name;
 int id;
 float marks[];
	
 public student(string name, int id, float marks[]) {
 this.name = name;
 this.id = id;
 this.marks = new float[] {marks[0], marks[1], marks[2]};
		
		
 }
	
 public float getaveragemark() {
 float avg = (float)(this.marks[0] + this.marks[1] + this.marks[2])/3;
 return avg;
		
 }
	
 public void printstudentdetails() {
 system.out.println(this.id);
 system.out.println(this.name);
 for(int j = 0; j<3; j++) {
 system.out.print(this.marks[j] + " ");
 }

		
		
 }
	
 public boolean ispassing() {
 if(this.getaveragemark() >= 50) {
 return true;
 }
 else {
 return false;
 }
 }
	
 public static void findtopscorer(student[] students) {
 float topscore = 0;
 int topscorerindex = 0;
 
 for(int i = 0; i<students.length; i++) {
 if(students[i].getaveragemark() >= topscore) {
 topscore = students[i].getaveragemark();
 topscorerIndex = i;
 }
			
 }

 system.out.println(students[topscorerindex].id);
 system.out.println(students[topscorerindex].name);

 for(int j = 0; j<3; j++) {
 system.out.print(students[topscorerindex].marks[j] + " ");
 }
 system.out.println("");
 system.out.println(students[topscorerIndex].getaveragemark());

 }



}